# Usar una imagen base ligera con Node.js
FROM node:20-alpine as builder

# Configurar el directorio de trabajo
WORKDIR /app

# Copiar archivos de dependencias
COPY package.json package-lock.json ./

# Instalar dependencias
RUN npm ci

# Copiar el resto del c贸digo
COPY . .

# Compilar la aplicaci贸n Angular
RUN npm run build -- --configuration production

# Usar una imagen base ligera con Nginx para servir la aplicaci贸n
FROM nginx:alpine

# Copiar los archivos compilados desde la etapa de construcci贸n
COPY --from=builder /app/dist/front/browser /usr/share/nginx/html

# Exponer el puerto 80
EXPOSE 80

# Comando para iniciar Nginx
CMD ["nginx", "-g", "daemon off;"]